@model ButtonGrid.Models.ButtonModel

@{
    string[] imagename = { "blue_button.png", "green_button.png", "purple_button.png", "yellow_button.png" };
    bool allMatch = true;
}

<button class="game-button" type="submit" name="buttonNumber" value="@Model.Id" asp-controller="button" asp-action="HandleButtonClick">

    <img class="game-button-image" src="~/img/@imagename[Model.ButtonState]" />

    <div class="button-label">
        @Model.Id, @Model.ButtonState
    </div>
</button>